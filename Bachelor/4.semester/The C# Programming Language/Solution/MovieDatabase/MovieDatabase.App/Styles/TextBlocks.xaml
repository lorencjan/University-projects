<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="TextBlock" x:Key="TextBlockBase">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="DetailInfo" BasedOn="{StaticResource TextBlockBase}">
        <Setter Property="Margin" Value="10 0 0 7"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="ListViewHeader" BasedOn="{StaticResource TextBlockBase}">
        <Setter Property="Foreground" Value="DarkBlue"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Margin" Value="10"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="ListInDetail" BasedOn="{StaticResource TextBlockBase}">
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Margin" Value="10"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="ListInNew" BasedOn="{StaticResource TextBlockBase}">
        <Setter Property="Foreground" Value="DarkBlue"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

</ResourceDictionary>