@viewModel System.Object, mscorlib
@baseType RockFests.Controls.FormGroupDateTime, RockFests

<div class="{value: "form-group w-" + _control.Width}">
    <dot:Literal Text="{controlProperty: Label}" class="mr-2" Class-required="{controlProperty: Required}" />
    <dot:Validator Value="{controlProperty: Value}" ShowErrorMessageText="true" InvalidCssClass="has-error" IncludeInPage="{controlProperty: Validate}" />
    <dot:TextBox Text="{controlProperty: Value}" class="{value: "page-input form-control d-block w-" + _control.InputWidth}" Type="Date" />
</div>
