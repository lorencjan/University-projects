@viewModel System.Object, mscorlib
@baseType RockFests.Controls.FormGroupComboBox, RockFests

<div class="{value: "form-group w-" + _control.Width}">
    <dot:Literal Text="{controlProperty: Label}" class="mr-2" Class-required="{controlProperty: Required}" />
    <dot:Validator Value="{controlProperty: ValidationValue}" ShowErrorMessageText="true" InvalidCssClass="has-error" IncludeInPage="{controlProperty: Validate}" />
    <dot:ComboBox SelectedValue="{controlProperty: Selected}" DataSource="{controlProperty: DataSource}" ItemValueBinding="{value: Key}" ItemTextBinding="{value: Value}" class="{value: "form-control d-block w-" + _control.InputWidth}" />
</div>
